<script type="text/javascript">
    $(document).ready(function () {
        $("#home_k1").css({ left: '-500px' }).animate({ left: '0px' }, 2500)
        $("#home_a2").css({ left: '-500px' }).animate({ left: '0px' }, 2000)
        $("#home_n3").css({ left: '-500px' }).animate({ left: '0px' }, 1500)
        $("#home_b4").css({ right: '-500px' }).animate({ right: '0px' }, 1500)
        $("#home_a5").css({ right: '-500px' }).animate({ right: '0px' }, 2000)
        $("#home_n6").css({ right: '-500px' }).animate({ right: '0px' }, 2500)
        $("#home_organize").css({ opacity: '0' }).delay(2500).animate({ opacity: '1' }, 1000);
        console.log(1);
    });
</script>
}