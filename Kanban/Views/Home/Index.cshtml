@{
    ViewData["Title"] = "Home Page";
}

<section class="text-center overflow-hidden home_background  d-flex flex-column justify-content-center align-items-center flex-grow-1">
    <div class="d-flex justify-content-center w-100 "> 
        <p id="home_k1" class="position-relative font_title-kanban">K</p>
        <p id="home_a2" class="position-relative font_title-kanban">A</p>
        <p id="home_n3" class="position-relative font_title-kanban">N</p>
        <p id="home_b4" class="position-relative font_title-kanban">B</p>
        <p id="home_a5" class="position-relative font_title-kanban">A</p>
        <p id="home_n6" class="position-relative font_title-kanban">N</p>
