@model Kanban.Controllers.AuthController.InputModel

@{
    ViewData["Title"] = "Register";
}




<section class="  d-flex flex-column  flex-grow-1 home_background">
    <h1 class="font-bad-script display-3 text-center mt-auto ">Register new account</h1>
    <div class="col-md-4 col-8 mx-auto mb-auto text-center  ">

        <form id="form_register" asp-action="Register" class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label font-bad-script font-md"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label font-bad-script font-md"></label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label font-bad-script font-md"></label>
                <input asp-for="Password" class="form-control" />
                <span type="password" asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label font-bad-script font-md"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span type="password" asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center align-content-center">
                <label class="m-0 text-info">Accept service politics and cookies</label>
                <input type="checkbox" id="form_register-checkbox" class="register_checkbox my-auto mx-2 " />
            </div>
            <div class="form-group text-center">
                <input type="button" value="Register!" id="form_register-submit" class="btn btn-info" />
            </div>
        </form>
    </div>



</section>



@section scripts{
    <script type="text/javascript">
        $(document).on("click", "#form_register-submit", function(){
            if ($("#form_register-checkbox").is(':checked')) {
                $('#form_register').submit();
        }
        });
    </script>
}