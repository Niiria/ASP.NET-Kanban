@model Kanban.Controllers.AuthController.InputModel

@{
    ViewData["Title"] = "Login";
}




<section class=" flex-grow-1 home_background d-flex">
    
    <div class="col-md-4 col-8 m-auto text-center ">
        <h1 class="font-bad-script display-1">Login</h1>
        <form id="form_login" asp-action="Login" class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label font-bad-script font-md"></label>
                <input asp-for="Username" class="form-control" value="user1" />

            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label font-bad-script font-md"></label>
                <input type="password" asp-for="Password" class="form-control" value="user1" />
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Login!"  class="btn btn-info" />
            </div>
        </form>
    </div>


</section>



